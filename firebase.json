{
  "hosting": {
    "public": "build",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],

    "headers": [{
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
      "headers" : [{
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      }]
    },{
      "source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=604800"
      }]
    },{
      "source" : "**/*.@(css|js)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=604800"
      }]
    },{
      "source" : "/service-worker.js",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "no-cache"
      }]
    }]
  }
}
