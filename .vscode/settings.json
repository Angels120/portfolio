{
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.workingDirectories": [
    "./src",
    "./scripts",
    "./functions"
  ],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/design": true,
    "**/*.sketch": true,
    "**/*.studio": true
  },
  "search.exclude": {
    "**/bower_components": true,
    "**/node_modules": true,
    "**/build/*.js": true,
    "index.*": true
  }
}
